# Production Environment Configuration for SIMDAG
# Copy this file to .env on the server and modify the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=simdag_user
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_DATABASE=simdag_db
DB_TYPE=postgres

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://10.10.11.149,https://nodejs.hestia.lokal

# File Upload Configuration
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=5242880

# API Configuration
API_PREFIX=api

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Session Configuration
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET

# Email Configuration (if needed)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USER=your-email@gmail.com
# MAIL_PASS=your-app-password
# MAIL_FROM=noreply@simdag.com

# Redis Configuration (if using Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Application URLs
FRONTEND_URL=http://10.10.11.149
BACKEND_URL=http://10.10.11.149:3000

# File Serving
STATIC_FILES_PATH=./uploads
STATIC_FILES_URL=/uploads